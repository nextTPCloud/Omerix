# ===========================================
# TPV TRALOK - CONFIGURACIÓN PRODUCCIÓN
# ===========================================
# NOTA: El TPV en producción usa Electron y almacenamiento local

# Backend Local del TPV
TPV_PORT=3011
MONGODB_LOCAL_URI=mongodb://localhost:27017/tralok-tpv

# Cloud API (API principal de Tralok)
CLOUD_API_URL=https://api.tralok.com/api

# Frontend URLs
NEXT_PUBLIC_CLOUD_API_URL=https://api.tralok.com/api
NEXT_PUBLIC_LOCAL_API_URL=http://localhost:3011

# ===========================================
# VERIFACTU (Facturación electrónica)
# ===========================================
# IMPORTANTE: Configurar según la empresa
VERIFACTU_ENABLED=true
VERIFACTU_CERTIFICADO_PATH=/ruta/al/certificado.p12
VERIFACTU_CERTIFICADO_PASSWORD=<password-certificado>
VERIFACTU_NIF_EMPRESA=<NIF-empresa>
VERIFACTU_NOMBRE_EMPRESA=<Nombre-empresa>

# ===========================================
# PERIFÉRICOS
# ===========================================
# Impresora de tickets
PRINTER_TYPE=usb
PRINTER_PORT=
PRINTER_IP=
PRINTER_WIDTH=80

# Cajón portamonedas
CASH_DRAWER_ENABLED=true

# Display de cliente
CUSTOMER_DISPLAY_ENABLED=false
CUSTOMER_DISPLAY_PORT=COM3

# Báscula
SCALE_ENABLED=false
SCALE_PORT=COM4

# Terminal de pago (datáfono)
PAYMENT_TERMINAL_ENABLED=false
PAYMENT_TERMINAL_TYPE=ingenico
PAYMENT_TERMINAL_PORT=COM5
