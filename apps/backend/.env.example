# ============================================
# TRALOK ERP - PLANTILLA DE CONFIGURACIÓN
# ============================================
# Copia este archivo a .env y rellena los valores
# cp .env.example .env

# Entorno: development | production | test
NODE_ENV=development

# Puerto del servidor
PORT=5000

# ============================================
# BASE DE DATOS
# ============================================
MONGODB_URI=mongodb://localhost:27017/tralok-dev

# ============================================
# FRONTEND (CORS)
# ============================================
FRONTEND_URL=http://localhost:3000

# ============================================
# JWT - Autenticación
# ============================================
JWT_SECRET=cambia-este-secret-por-uno-seguro-de-al-menos-32-caracteres
JWT_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=7d

